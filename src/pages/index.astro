---
import Categories from '../components/Categories.astro';
import Welcome from '../components/Welcome.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Главная">
	<Welcome />
	<Categories server:defer>
		<div slot="fallback" class="mx-3.5">
			<h3 class="text-lg font-bold text-center lg:text-left">Список категорий товаров</h3>
			<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-5 py-2">
				<div class="flex sm:min-w-40 min-w-75 flex-col gap-4">
					<div class="skeleton h-32 w-full"></div>
					<div class="skeleton h-4 w-full"></div>
					<div class="skeleton h-4 w-full"></div>
				</div>
				<div class="flex sm:min-w-40 min-w-75 flex-col gap-4">
					<div class="skeleton h-32 w-full"></div>
					<div class="skeleton h-4 w-full"></div>
					<div class="skeleton h-4 w-full"></div>
				</div>
				<div class="flex sm:min-w-40 min-w-75 flex-col gap-4">
					<div class="skeleton h-32 w-full"></div>
					<div class="skeleton h-4 w-full"></div>
					<div class="skeleton h-4 w-full"></div>
				</div>
			</div>
		</div>
	</Categories>
</BaseLayout>
