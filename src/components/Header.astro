---
import { Image } from 'astro:assets';
import AltexLogo from '../assets/altex-logo-md.png';
import NavPathMapper from '../utils/path-mapper';

const allPaths = new NavPathMapper().getAllPaths();
---

<script>
  import { applyThemeToggle } from "../utils/theme-toglle";
  
  applyThemeToggle(document.querySelector('[data-theme-toggle]'),
    document.querySelector('[data-theme-toggle-dark]'), 
    document.querySelector('[data-theme-toggle-light]')
  );
</script>

<div class="navbar bg-base-100">
  <div class="navbar-start px-2">
    <div class="dropdown">
      <div tabindex="0" role="button" class="btn btn-ghost md:hidden">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" /> 
        </svg>
      </div>
      <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow">
        {allPaths && allPaths.map((x) => (
          <li>
            <a href={x.path}>{x.displayValue}</a>
          </li>
        ))}
      </ul>
    </div>
    <a href="/">
      <Image src={AltexLogo} class="w-16" alt="Logo" />
    </a>
    <div class="px-3 hidden md:flex">
      <a class="text-xl font-bold decoration-0" href="/">АЛТЕХ</a>
    </div>
  </div>
