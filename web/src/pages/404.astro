---
import BaseLayout from '../layouts/BaseLayout.astro';
import AstroLogo from '../assets/astro.svg';

const titlePageNotFound = "Страница не найдена";
const titleDetails = "Запрошенный вами ресурс не найден. Просим прощение за неудобства, скоро мы постараемся это исправить.";
---

<BaseLayout title={titlePageNotFound}>
  <div class="flex flex-col items-center justify-center min-h-[96] bg-cover bg-center bg-[url(/public/background.svg)]">
    <img src={AstroLogo.src} class="w-10 h-10"/>
    <h1>
      <span class="text-error font-bold text-xl">404:</span>
      <span class="font-bold text-xl pl-1">{titlePageNotFound}</span>
    </h1>
    <span class="font-medium text-lg text-center pb-5">{titleDetails}</span>
  </div>
</BaseLayout>