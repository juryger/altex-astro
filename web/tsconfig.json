{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    // not needed as already enabled by astro/tsconfigs/strict
    //"strictNullChecks": true
    //"baseUrl": "..",
    "paths": {
      "@/*": ["../*"], // This maps "@/" to the "/" folder
      "@/web": ["../web/src/index.ts"],
      "@/lib/*": ["../lib/*"], // This maps "@/" to the "/" folder
      "@/lib/cqrs": ["../lib/cqrs/src/index.ts"],
      "@/lib/domain": ["../lib/domain/src/index.ts"],
      "@/lib/email": ["../lib/email/src/index.ts"],
      "@/lib/dal": ["../lib/dal/src/index.ts"]
    }
  }
}
