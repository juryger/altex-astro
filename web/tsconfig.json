{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    // not needed as already enabled by astro/tsconfigs/strict
    //"strictNullChecks": true
    "baseUrl": "..",
    "paths": {
      "@/*": ["*"], // This maps "@/" to the "/" folder
      "@/web/*": ["web/*"],
      "@/lib/*": ["lib/*"]
    }
  }
}
