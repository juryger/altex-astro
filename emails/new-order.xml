<?xml version="1.0" encoding="UTF-8"?>
<Order id="{{orderId}}" created="{{createdAt}}">
  <Customer>
    {{#with client}}
    <Info name="uid" value="{{uid}}" />
    <Info name="company" value="{{companyName}}" />
    <Info name="phone" value="{{phone}}" />
    <Info name="email" value="{{email}}" />
    <Info name="contactName" value="{{fullName}}" />
    <Info name="address" value="{{postCode}} {{city}} {{address}}" />
    <Info name="inn" value="{{taxNumber}}" />
    {{/with}}
  </Customer>
  <Items>
    {{#each items}}
    <Item uid="{{this.productUid}}" price="{{this.price}}" quantity="{{this.quantity}}" colorUid="{{this.colorUid}}" />
    {{/each}}
  </Items>
</Order>